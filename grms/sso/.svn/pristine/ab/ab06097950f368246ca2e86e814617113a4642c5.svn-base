/*样式重置 reset*/
html,body,h1,h2,h3,h4,h5,p,dl,dd,ul,ol,form,input,textarea,th,td,select，li{
    margin:0;padding:0;
    font-size: 14px;
}
em{
    font-style:normal;
}
li{
    list-style:none;
}
a{
    text-decoration:none;
    color: #222;
}
img{
    border:none;vertical-align:top;
}
table{
    border-collapse:collapse;
}
input,textarea{
    outline:none;
}
textarea{
    resize:none;overflow:auto;
}
body{
    font-size:16px;font-family:"微软雅黑";
}