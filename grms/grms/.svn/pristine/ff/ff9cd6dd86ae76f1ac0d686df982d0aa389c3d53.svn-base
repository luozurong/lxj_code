  <!-- 查询异常列表，按上报时间倒序 -->
	<select id="listException" resultType="com.hori.grms.vo.ProjectActionExceptionVo">
		select 
				pae.department_id, pae.department_name, pae.business_type, pae.id 'exception_id', pae.project_action_code, 
				pae.create_time, pae.exception_remark, pae.status, pae.confirm_status, pae.result, pa.receive_account
		from project_action_exception pae
		left join project_action pa on pae.project_action_code = pa.action_code
		<where>
			<if test="projectActionCode != null and projectActionCode != ''">
				and pae.project_action_code = #{projectActionCode}
			</if>
			<if test="startTime != null and startTime != ''">
        		<![CDATA[ and UNIX_TIMESTAMP(pae.create_time) between UNIX_TIMESTAMP(#{startTime}) and UNIX_TIMESTAMP('${startTime} 23:59:59')]]>
        	</if>
			<if test="status != null">
				and pae.status = ${status}
			</if>
		</where> order by pae.create_time desc
	</select>
	
