//适用日期选择，格式化时间
function timeselect(){
	//var date=new Date();
    $("#startTime").datebox({
        onSelect : function(beginDate){
        	$('#endTime').datebox('calendar').calendar({
        		validator: function(date){
        			return beginDate<=date;//<=
        		}
        	});
        }
    });

    $("#endTime").datebox({
        onSelect : function(endDate){
        	$('#startTime').datebox('calendar').calendar({
        		validator: function(date){
        			return endDate>=date;//<=
        		}
        	});
        }
    });
}
