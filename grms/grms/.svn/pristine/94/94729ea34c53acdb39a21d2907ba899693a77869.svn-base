
var userType;
var dataList;
$(function () {
    $.ajax({  
        type : "POST",  //提交方式  
        url : "/ums/organizationAction!getSystemOrganization.html",//路径  
        dataType : "json",//数据，这里使用的是Json格式进行传输  
        success : function(result) {//返回数据根据结果进行相应的处理  
            if ( result.success) {  
