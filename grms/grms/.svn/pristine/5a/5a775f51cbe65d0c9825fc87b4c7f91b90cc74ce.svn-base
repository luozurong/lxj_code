	<select id="fetchCompanyByName" parameterType="java.lang.String" resultType="java.util.HashMap">
		SELECT
			c.name as name,c.owner_name as salesman 
		FROM customer c where 1=1 and c.name LIKE CONCAT(CONCAT('%',#{condition}),'%')
