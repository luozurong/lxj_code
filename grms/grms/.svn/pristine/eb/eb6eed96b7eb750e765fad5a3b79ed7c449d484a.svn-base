    <!-- 查询项目列表 -->
    <select id="list" resultMap="BaseResultMap" parameterType="com.hori.grms.queryBean.ProjectQueryBean" >
        select
        <include refid="Base_Column_List" />
        from project
        where status != -1
			<if test="productCode!= null and productCode != ''" >
				and product_code like CONCAT('%',#{productCode},'%')
            </if>
			<if test="name!= null and name != ''" >
				and name like CONCAT('%',#{name},'%')
            </if>
			<if test="customerName!= null and customerName!=''" >
				and customer_name like CONCAT('%',#{customerName},'%')
            </if>
			<if test="contractCode!= null and contractCode!=''" >
				and contract_code like CONCAT('%',#{contractCode},'%')
            </if>
			<if test="status!= -2" >
				and status = #{status}
            </if>
            <if test="accounts != null and accounts.size() > 0">
            	and account in
            	<foreach collection="accounts" item="account" open="(" separator="," close=")">
              		#{account}       
       			</foreach>
            </if>
            limit #{start},#{pageSize}
    </select>
	
	<select id="findProjectDetailsVoByProjectCode" resultMap="ProjectDetailsVoResultMap" parameterType="java.lang.String" >
        SELECT p.id,p.name,p.product_code,p.customer_id,p.customer_name,p.status,p.description,c.id as contract_id,c.status  as contract_status,c.contract_name ,c.contract_code FROM project p 
		LEFT JOIN  contract c ON c.contract_code = p.contract_code
		WHERE p.product_code =  #{projectCode,jdbcType=VARCHAR}
    </select>
    
    
