body{
	background: #f8f8f8;
}
.wrap-container{
	margin: 30px;
	background: #fff;
	padding: 20px;
}
.department-name{
	display:inline-block;
	width: 150px;
	text-align: right;
	line-height: 50px;
}
.department-name:before{
	content: "*";
	color: #ff4747;
}
.department-choose span{
	display:inline-block;
	height: 35px;
	width: 90px;
	border:1px solid #51d2b6;
	color: #51d2b6;
	border-radius: 3px;
	text-align: center;
	line-height: 35px;
	margin-right: 20px;
	cursor:pointer;
}
.department-choose .department-choose-active{
	border:1px solid #ff4747;
	color: #ff4747;
}
.department{
	text-align:center;
}
.department button{
	display: inline-block;
	width: 120px;
	height: 40px;
	border-radius: 3px;
	border: 1px solid #51d2b6;
	color: #51d2b6;
	margin: 30px;
}