
var userType;
var dataList;
var mapButton = {};
mapButton['search'] = 1;
mapButton['create'] = 1;
mapButton['batchDel'] = 1;
mapButton['edit'] = 1;
mapButton['delete'] = 1;
$(function () {
	initButton();
    $.ajax({  
        type : "POST",  //提交方式  
        url : "/ums/organizationAction!getSystemOrganization.html",//路径  
        dataType : "json",//数据，这里使用的是Json格式进行传输  
