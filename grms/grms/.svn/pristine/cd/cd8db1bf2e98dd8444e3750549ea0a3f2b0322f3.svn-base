function paginationpage(total){
	
    //分页
    $('#pp').pagination({
        total:total,
        layout:['first','prev','links','next','last','manual'],
        emptyMsg: '<span>无记录</span>',
        showRefresh:true,
        displayMsg:' ',
        onSelectPage:function (pageNo, pageSize) {
        	pageNoAll=pageNo;
        	pageSizeAll=pageSize;
            $("#customerList").datagrid('load', {    
            	pageSize:8,
            	pageNo:	pageNo
             });
       }
      });
}



