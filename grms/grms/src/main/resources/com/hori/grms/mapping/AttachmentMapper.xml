    <update id="updateByPrimaryKeySelective" parameterType="com.hori.grms.model.Attachment" >
        update attachment
        <set >
            <if test="fileUrl != null" >
                file_url = #{fileUrl,jdbcType=VARCHAR},
            </if>
            <if test="fileName != null" >
                file_name = #{fileName,jdbcType=VARCHAR},
            </if>
