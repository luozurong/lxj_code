        </set>
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.String" >
        delete from attachment
        where id = #{id,jdbcType=VARCHAR}
    </delete>

    <delete id="deleteByExample" parameterType="com.hori.grms.model.AttachmentExample" >
        delete from attachment
        <if test="_parameter != null" >
            <include refid="Example_Where_Clause" />
        </if>
    </delete>
    
    <!-- 根据关联附件id查看结案相关附件 -->
    <select id="findBycorrelationIdForClose"  resultType="com.hori.grms.model.Attachment" >
        select 
		    a.id,
		    a.file_url fileUrl,
		    a.file_name fileName,
		    a.type,
		    a.correlation_id correlationId
        	FROM close_case_info cc INNER JOIN attachment a ON cc.id=a.correlation_id 
        	WHERE cc.project_code = #{correlationId} and a.type=#{type}
    </select>
    
    <!-- 根据关联附件id查看相关附件 -->
    <select id="findBycorrelationId"  resultType="com.hori.grms.model.Attachment" >
        select 
		    id,
		    file_url fileUrl,
		    file_name fileName,
		    type,
		    correlation_id correlationId
        from attachment where correlation_id=#{correlationId} and type=#{type}
    </select>
    
    
    <!-- 根据关联附件id删除相关附件 -->
    <delete id="deleteByCorrelationId">
       delete from attachment where correlation_id=#{correlationId}
    </delete>

    <!-- 根据项目编号获取所有清单附件 -->
    <select id="queryByProjectCode"  resultType="com.hori.grms.model.Attachment" >
        select 
		    id,
		    file_url fileUrl,
		    file_name fileName,
		    type,
		    correlation_id correlationId
        from attachment where correlation_id in (select action_code from project_action where project_code=#{projectCode} ) 
        and type=3
    </select>
</mapper>